# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
quote_type = single

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js}]
charset = utf-8

# Indentation override for all JS under js directory
[**.js]
indent_style = space
indent_size = 2

# Indentation override for all CSS under css directory
[**.css]
indent_style = space
indent_size = 2

# Indentation override for all PHP
[**.php]
indent_style = space
indent_size = 2

# Matches the exact files either package.json
[package.json]
indent_style = space
indent_size = 2

# Indentation override for all SVG
[**.svg]
indent_style = space
indent_size = 2
